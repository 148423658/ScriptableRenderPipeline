.VFXContext.init {
	rect-color:#FFFF00;
}

.VFXContext.update {
	rect-color:#00FFFF;
}

.VFXContext.output {
	rect-color:#FF0000;
}

.FlowContainer{
	flex: 1;
	flex-direction: row;
	justify-content: space-between;
	padding-left: 20;
	padding-right: 20;
}

VFXFlowAnchor.InputEdgeConnector {
	background-image:resource("VFX/LayoutFlow_In");
}

VFXFlowAnchor.OutputEdgeConnector {
	background-image:resource("VFX/LayoutFlow_Out");
}

VFXFlowAnchor #type{
}

VFXFlowAnchor #connector{
	width: 32;
	height: 16;
}

VFXFlowAnchor #connector.anchorHighlight{
	border-color: #F0F;
	border-width: 4;
}

VFXContextUI {
	font:resource("Roboto/Roboto-Regular");
	font-size:12;
	flex: 1;
	flex-direction: column;
	align-items: stretch;
	min-height: 100;
	min-width: 320;
}

VFXContextUI #Title {
	min-height: 20;
	background-color: #FFF;
	padding-top: 2;
	padding-left: 2;
	padding-bottom: 2;
	padding-right: 2;
}

VFXContextUI.selected > #NodeContents  {
	border-color: #FFAA22;
	border-width: 5;
}

VFXContextUI #NodeContents {
	text-alignment:upper-center;
	padding-top: 8;
	padding-left: 8;
	padding-bottom: 8;
	padding-right: 8;

	text-color:#8FC1DF;

	font:resource("Roboto/Roboto-Medium");
	font-size:12;

	/* currently border-XXX is only used for layout
	   where border-width is used to paint text and border.
	   They must keep in sync until we support variable border
	   thickness per edge */
	border-radius: 10;
	background-color: #2D2D2D;
}

VFXContextUI #NodeContents > Label{
	height:20;
	text-alignment:upper-center;

	text-color:#8FC1DF;

	font:resource("Roboto/Roboto-Medium");
	font-size:12;
}

NodeBlockContainer {
	flex:1;
	flex-direction: column;
	background-color: #444;
	min-height: 64;
}

VFXNodeBlockUI.selected {
	border-color: #FFAA22;
	border-width: 1;
	background-color: #555;
}

VFXNodeBlockUI {
	flex:1;
	flex-direction: column;
	background-color: #333;
	margin-bottom: 2;
	min-height: 64;
}

VFXNodeBlockUI #SlotContainer {
	background-color: #F0F;
}

VFXNodeBlockUI #Title {
	min-height: 20;
	text-color:#8FA1DF;
	background-color: #555;
	padding-top: 2;
	padding-left: 2;
	padding-bottom: 2;
	padding-right: 2;
}

VFXView #VFXBackgroundGrid {
	grid-background-color:#303030;
	line-color:#404040;
	thick-line-color:#555;
	spacing:75.0;
	thick-lines:5;
}
