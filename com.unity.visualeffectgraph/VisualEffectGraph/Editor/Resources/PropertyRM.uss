.propertyrm
{
    flex-direction: row;
}

.propertyrm #icon
{
    margin-top:2;
    width:16;
    height:16;
}

.propertyrm #spacebutton
{
    -flex:1;
    width:16;
	height:16;
}

.propertyrm #label
{
    text-color: rgb(153,153,153);
}

.spaceablepropertyrm.propertyrm #label
{
	margin-right:12px;
}

.spaceCamera
{
	background-image:resource("vfx/spacecamera");
}
.spaceLocal
{
	background-image:resource("vfx/spacelocal");
}
.spaceGlobal
{
	background-image:resource("vfx/spaceglobal");
}

.propertyrm > FloatField
{
	margin-bottom:3;
}

.propertyrm .fieldContainer > *
{
    flex:1;
	margin-bottom:3;
	margin-left:6;
}
.propertyrm .textfieldd
{
    text-color:#BBB;

    
	border-left-width:0;
	border-right-width:0;
	border-top-width:0;
	border-bottom-width:0;
    
	-background-color:#414141;
	background-image:resource("textfield");
	slice-left:3;
	slice-right:3;
	slice-top:3;
	slice-bottom:3;
    text-alignment:middle-left;
    
    padding-top:0;
    padding-bottom:0;
    padding-left:3;
    padding-right:3;
    flex:1;
	min-height:14;
	min-width:5;
}

#line
{
	background-color:#999;
}
.propertyrm .textfield::disabled
{
    text-color:#666;
}

.propertyrm .fieldContainer * .label
{
    text-color:#888;
    width:12;
    padding-left:2;
    text-alignment:middle-center;
}
.propertyrm .fieldContainer
{
    -align-items: center;
    flex-direction:row;
    flex:1;
}

BoolPropertyRM Toogle
{
    margin-top:-4;
    width:17;
    height:17;
    border-color:#F00;
    
	border-left-width:2;
	border-right-width:2;
	border-top-width:2;
	border-bottom-width:2;
