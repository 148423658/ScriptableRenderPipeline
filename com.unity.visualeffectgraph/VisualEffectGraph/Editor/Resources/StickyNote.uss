.sticky-note
{
    flex-direction:column;
    align-items:stretch;
    layer:100;
    border-radius:0;
    margin-bottom: 0;
    border-left-width:0;
    border-top-width:0;
    border-bottom-width:0;
    border-right-width:0;
}

.sticky-note, * TextField
{
    background-color:#F6FF9A;
}

.sticky-note .resizer
{
    margin-bottom:2;
    margin-right:2;
}

.sticky-note * 
{
    text-color:#000000;
}

* > #node-border
{
    flex:1;
    flex-direction:column;
    align-items:stretch;   
}


* #title, * #title * 
{
    font-size:20;
}
* #contents, * #contents * 
{
    font-size:11;
    word-wrap:true;
}

* #title
{
    height:5;
}

* #title.not-empty
{
    height:24;
}

* #contents
{
    flex:1;
}

* TextField
{
    position-type: absolute;
    position-left:0;
    position-right:0;
    position-top:0;
    position-bottom:0;
    margin-left:0;
    margin-right:0;
    margin-top:0;
    margin-bottom:0;
    background-image:none;
}

* Label
{
    border-top-width:1;
    border-left-width:1;
    border-right-width:1;
    border-bottom-width:1;
    border-top: 1;
    border-left: 1;
    border-right: 1;
    border-bottom: 1;
    margin-left:1;
    margin-right:1;
    margin-top:1;
    margin-bottom:1;
    -border-color: rgba(0, 0, 0, 0.5);
}

* Label:hover
{
    border-color: rgba(68,192,255, 0.5);
}

* TextField:hover
{
    background-image:none;
}

* TextField:focus
{
    background-image:none;
}

* TextField:focus:hover
{
    background-image:none;
}

* #title TextField
{
    height:24;
}

/* Themes*/

.sticky-note.theme-orange, .theme-orange TextField
{
    background-color:#FCD76E;
}
.sticky-note.theme-black, .theme-black TextField
{
    background-color:#000000;
}
.sticky-note.theme-black *
{
    text-color: #999999;
}
.sticky-note.theme-red, .theme-red TextField
{
    background-color:#FF8B8B;
}
.sticky-note.theme-green, .theme-green TextField
{
    background-color:#6BE6B0;
}
.sticky-note.theme-blue, .theme-blue TextField
{
    background-color:#8FC1DF;
}
.sticky-note.theme-teal, .theme-teal TextField
{
    background-color:#84E4E7;
}
.sticky-note.theme-purple, .theme-purple TextField
{
    background-color:#FBCBF4;
}