Pass
{		
	Tags { "LightMode"="MotionVectors" }
	
	// If velocity pass (motion vectors) is enabled we tag the stencil so it don't perform CameraMotionVelocity
	Stencil
	{
		WriteMask 128
		Ref 128
		Comp Always
		Pass Replace
	}

	ZWrite On
	Blend Off
	
	HLSLPROGRAM
	#define IS_MOTION_VECTORS_PASS 1
	${VFXInclude("Shaders/RenderPipeline/HDRP/Templates/Mesh/PassDepthOrMV.template")}
	ENDHLSL
}
